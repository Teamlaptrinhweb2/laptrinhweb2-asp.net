                <script>
                    CKEDITOR.replace("FullDescription");
                </script>
            </div>
        </div>

        <div class="form-group">
            Bị xóa:
            <div class="col-md-10">
                @Html.EditorFor(model => model.BiXoa, new { htmlAttributes = new { @class = "form-control" } })
