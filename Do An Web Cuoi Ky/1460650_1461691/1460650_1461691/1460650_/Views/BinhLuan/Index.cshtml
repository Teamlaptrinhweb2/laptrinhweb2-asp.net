@model IEnumerable<DienThoaiShopConnection.BinhLuan>
@{
    ViewBag.Title = "Index";
}


<h2>Binh Luan </h2>
@using (Html.BeginForm("Create", "BinhLuan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("MaSanPham", (int)ViewBag.MaSanPham)
    @Html.TextArea("NoiDung")

    <input type="submit" value="Dang" />
}
<div id="comments">
    @foreach (var item in Model)
    {
        <div class="comment">
            <div class="comment-name">@item.TenTaiKhoan</div>
            <div class="comment-content">@item.NoiDung</div>
        </div>
    }
</div>


