    <div class="pb-left-column col-xs-12 col-sm-5 col-md-6">
        <div id="image-block" class="clearfix">

            <span id="view_full_size">
                <a class="jqzoom" rel="gal6177563" href="//bizweb.dktcdn.net/thumb/medium/100/192/962/products/3769b46b7d22e48819e8b74901c9e2.jpg?v=1490542828553">
                    <img id="kt_zoom" class="img-responsive" itemprop="image" src="@Model.hinhanh" alt="">
                </a>
            </span>

        </div>
        <div id="views_block" class="clearfix hidden">
            <div id="thumbs_list">
                <ul id="thumbs_list_frame" class="owl-carousel owl-theme" style="opacity: 0;"></ul>
            </div>
        </div>
        <p class="resetimg clear no-print">
            <span id="wrapResetImages" style="display: none;">
                <a href="#" data-id="resetImages">
                    <i class="icon-repeat"></i> Hiển thị tất cả hình ảnh
                </a>
            </span>
        </p>
    </div>
    <div class="pb-center-column col-xs-12 col-sm-7 col-md-6">
        <h1 itemprop="name">@Model.TenSanPham</h1>
           <div id="short_description_block">
            <div id="short_description_content" class="rte align_justify" itemprop="description">
                <ul>
                    <li>@Model.MoTa</li>
                </ul>
            </div>
        </div>
        <div class="pb-right-column col-xs-12">
            <form id="buy_block" enctype="multipart/form-data" action="/cart/add" method="post">
                <div class="box-info-product">
                    <div class="content_prices clearfix">
                        <div>
                            <p class="our_price_display" itemprop="offers" itemscope="" itemtype="https://schema.org/Offer">
                                <span id="our_price_display" class="price" itemprop="price" content="14790000.0000">Giá Sản Phẩm : @Model.Gia</span>
                            </p>

                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="product_attributes clearfix">
                        <div id="attributes">
                            <div class="clearfix"></div>


                            <input id="product-id" type="hidden" name="variantId" value="9842094">

                        </div>
                    </div>
                   </div>
            </form>
        </div>
    </div>
    <div class="row"></div>
    <div class="right_content">
       @Html.Action("Index", "BinhLuan", new { MaSanPham = Model.MaSanPham })
