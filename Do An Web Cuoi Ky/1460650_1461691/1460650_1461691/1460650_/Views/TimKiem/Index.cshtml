
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="page-content" class="single-page">
    <div class="row">
        <div id="main-content" class="col-lg-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="products">

                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                <div class="product">
                                    <div class="image"><a href="@Url.Action("Details","SanPham", new { id = @item.MaSanPham})"><img style="max-width:220px;max-height:220px" src="@item.hinhanh" /></a></div>

                                    <div class="caption">
                                        <div class="name"><h3><a href="@Url.Action("Details","SanPham", new { id = @item.MaSanPham})">@item.TenSanPham</a></h3></div>
                                        <div class="price"><ins>@string.Format("{0:#0,0 VNĐ}", @item.Gia)</ins></div>
                                        <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                    </div>
                                </div>
                            </div>
                       </div>

                        }
                </div>
                </div>
            </div>
        </div>
</div>